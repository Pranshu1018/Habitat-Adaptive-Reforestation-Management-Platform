    "normalization_formula": {
        "description": "Convert raw soil metrics to 0-100 health index",
        "formula": "health = (soc_score * 0.35) + (ph_score * 0.20) + (nutrient_score * 0.25) + (moisture_score * 0.20)",
        "components": {
            "soc_score": "(actual_soc - min_soc) / (max_soc - min_soc) * 100",
            "ph_score": "100 - abs(actual_ph - optimal_ph) * penalty_per_unit",
            "nutrient_score": "weighted average of N, P, K levels",
            "moisture_score": "actual_moisture / optimal_moisture * 100"
        }
    }
